    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.ts",
            "preLaunchTask":"npm: build_debug",   // package.json의 "빌드" 스크립트를 호출
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        }
    ]
}